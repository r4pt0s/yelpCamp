<% include ../partials/header %>


	<div class="row justify-content-md-center">
		<div class="col-6">
			<div class="jumbotron">
				<h1>Edit Campground <%=campground.name%></h1>
				<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				  <div class="form-group">
				    <label for="campName">Name of Campground</label>
				    <input type="text" class="form-control" id="campName" name="campground[name]" value="<%=campground.name%>"/>
					</div>
					<div class="form-group">
				    <label for="campPrice">Price per Night</label>
						<input type="number" class="form-control" id="campPrice" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01"/>
					</div>
				  <div class="form-group">
				    <label for="campUrl">URL to Campground image</label>
				    <input type="text" class="form-control" id="campUrl" name="campground[image]" value="<%=campground.image%>"/>
				  </div>
				  <div class="form-group">
				    <label for="campDesc">Description</label>
                    <textarea class="form-control" 
                              id="campDesc" 
                              name="campground[description]" 
                              placeholder="campground description..." ><%=campground.description%>
                    </textarea>
					</div>
					<div class="form-group">
							<label for="location">Location</label>
							<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
					</div>
				  <button class="btn btn-xs btn-primary">Save</button>
				</form>
			</div>
			<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">Go Back</a>
		</div>
	</div>


<% include ../partials/footer %>